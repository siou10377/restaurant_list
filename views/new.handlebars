<div class="container-fluid new-page">
  <h2 class="new-title">新增餐廳</h2>
  <hr>
  <form action="/restaurants/new" method="POST" class="add-new-restaurants" novalidte>
    <div class="row mb-3">
      <div class="col-sm-6">
        <label class="form-label" for="name">*餐廳名稱 ：</label>
        <input class="form-control" type="text" name="name" placeholder="name" maxlength="10" required>
        <div class="invalid-feedback">
          Please provide a valid city.
        </div>
      </div>
      <div class="col-sm-6">
        <label class="form-label" for="phone">餐廳電話 ：</label>
        <input class="form-control" type="text" name="phone" placeholder="phone">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-6">
        <label class="form-label" for="category">*餐廳類型 ：</label>
        <input class="form-control" list="categorys" name="category" placeholder="category" id="category" maxlength="10"
          required>
        <datalist id="categorys">
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>美式</option>
          <option>酒吧</option>
          <option>咖啡</option>
        </datalist>
      </div>
      <div class="col-sm-6">
        <label class="form-label" for="rating">*評分 ： </label>
        <input type="number" class="form-control" name="rating" min="0" max="5" step="0.1" value="3" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-12">
        <label class="form-label" for="location">地址 ：</label>
        <input class="form-control" type="text" name="location" placeholder="location">
      </div>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">*圖片網址：</label>
      <input type="text" name="image" placeholder="image address" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Google Map 網址：</label>
      <input type="text" name="google_map" placeholder="google_map address" class="form-control">
    </div>
    <div class="mb-3 input-group-lg">
      <label for="exampleInputEmail1" class="form-label">餐廳描述：</label>
      <textarea name="description" id="exampleInputEmail1" cols="40" rows="3" class="text-area"></textarea>
    </div>
    <button type="submit"> Save</button>
  </form>
</div>