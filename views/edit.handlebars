<div class="edit-page">
  <form action="/restaurants/{{restaurants._id}}?_method=PUT" method="POST">
    <h2 class="new-title">修改餐廳</h2>
    <hr>
    <div class="row mb-3">
      <div class="col-sm-6">
        <label class="form-label" for="name">餐廳名稱 ：</label>
        <input class="form-control" type="text" name="name" placeholder="name" value="{{restaurants.name}}"
          maxlength="10" required>
      </div>
      <div class="col-sm-6">
        <label class="form-label" for="phone">餐廳電話 ：</label>
        <input class="form-control" type="text" name="phone" placeholder="phone" value="{{restaurants.phone}}">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-6">
        <label class="form-label" for="category">餐廳類型 ：</label>
        <input class="form-control" list="categorys" name="category" placeholder="category" id="category"
          value="{{restaurants.category}}" maxlength="5" required>
        <datalist id="categorys">
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>美式</option>
          <option>酒吧</option>
          <option>咖啡</option>
        </datalist>
      </div>
      <div class="col-sm-6">
        <label class="form-label" for="rating">評分 ： </label>
        <input type="number" class="form-control" name="rating" min="0" max="5" step="0.1"
          value="{{restaurants.rating}}" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-12">
        <label class="form-label" for="location">地址 ：</label>
        <input type="text" name="location" placeholder="location" class="form-control" value="{{restaurants.location}}">
      </div>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">圖片網址：</label>
      <input type="text" name="image" placeholder="image address" class="form-control" value="{{restaurants.image}}"
        required>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Google Map 網址：</label>
      <input type="text" name="google_map" placeholder="google_map address" class="form-control"
        value="{{restaurants.google_map}}">
    </div>
    <div class="mb-3 input-group-lg">
      <label for="exampleInputEmail1" class="form-label">餐廳描述：</label>
      <textarea name="description" id="exampleInputEmail1" cols="40" rows="3"
        class="text-area">{{restaurants.description}}</textarea>
    </div>
    <button type="submit" onclick="return saveBtn()"> Save</button>
  </form>

</div>

<script>
  function saveBtn() {
    return alert('已修改完成！')
  }
</script>